<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="online.whitefieldmudra.aptmaintenance.MainActivity"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/layout_register"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_weight="0.24">

        <ImageButton
            android:id="@+id/register_button"
            android:layout_width="97dp"
            android:layout_height="88dp"
            android:elevation="21dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="120dp"
            android:gravity="center_horizontal"
            android:onClick="Redirect_Register"
            android:scaleType="fitXY"
            android:src="@drawable/register_here_button"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="95dp"
            android:layout_height="34dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="110dp"
            android:gravity="center"
            android:text="Register"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="204dp"
    android:orientation="horizontal"
    android:id="@+id/maintenenace_submit"
    android:layout_marginLeft="20dp"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/activities_list"
            android:layout_width="100dp"
            android:layout_height="173dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_weight="0.17">


            <ImageButton
                android:id="@+id/maintenenace_button"
                android:layout_width="97dp"
                android:layout_height="88dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="30dp"
                android:elevation="21dp"
                android:onClick="Redirect_MaintenanceSubmit"
                android:scaleType="fitXY"
                android:src="@drawable/maintenance_submit" />

            <TextView
                android:layout_width="95dp"
                android:layout_height="34dp"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:text="Payments"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
        android:layout_height="174dp"
        android:layout_width="105dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:weightSum="1"
        android:visibility="gone">

            <ImageButton
                android:id="@+id/tenantverification_button"
                android:layout_width="100dp"
                android:layout_height="85dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="30dp"
                android:elevation="22dp"
                android:onClick="Redirect_TendetailsSubmit"
                android:scaleType="fitXY"
                android:src="@drawable/tenantverification"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:text="Tenant Verification"
                android:textSize="15dp"
                android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>

</LinearLayout>
